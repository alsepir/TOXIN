//- footer block
footer.footer
  block about
    .about
      .header__logo
      .description Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды» 
  
  mixin relation-list(title, ...items)
    .relation__list
      h3.relation__title= title
      ul.relation__items
        each item in items
          li.relation__item
            a(href='#')= item

  block relation
    .relation
      +relation-list('Навигация', 'О нас', 'Новости', 'Служба поддержки', 'Услуги')
      +relation-list('О нас', 'О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы')
      +relation-list('Служба поддержки', 'Соглашения', 'Сообщества', 'Связь с нами')
  
  block subscribe
    .subscribe
      h3.subscribe__title Подписка
      p Получайте специальные предложения и новости сервиса
      input(type='text' name='email')

  block copyright
    .copyright
      .copyright__text Copyright © 2018 Toxin отель. Все права зачищены.
      .social-bar
        a(href='#')
          i(class="fab fa-twitter" alt='twitter')
        a(href='#') facebook
        a(href='#') instagram
      